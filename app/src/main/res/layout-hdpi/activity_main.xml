<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/etShowNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/gray"
        android:ems="10"
        android:paddingTop="39pt"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button14"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buClean"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buPlusMinus"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="+/-"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:id="@+id/button16"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buPercent"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buDiv"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOpEvent"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/buop" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu7"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu8"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu9"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buMul"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOpEvent"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/buop" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu4"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu5"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu6"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buSub"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOpEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/buop" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu1"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu2"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu3"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/whiteback"
                android:onClick="buNumberEvent"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/whiteback" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buSum"
                android:layout_width="43pt"
                android:layout_height="27pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@color/buop" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/bu0"
            android:layout_width="92pt"
            android:layout_height="27pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="buNumberEvent"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/whiteback" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buDot"
            android:layout_width="43pt"
            android:layout_height="27pt"
            android:layout_weight="1"
            android:background="@color/whiteback"
            android:onClick="buNumberEvent"
            android:text="."
            android:textColor="@color/black"
            android:textSize="20sp"
            app:backgroundTint="@color/whiteback" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/buEqual"
            android:layout_width="43pt"
            android:layout_height="27pt"
            android:layout_weight="1"
            android:background="@color/buop"
            android:onClick="buEqualEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/buop" />
    </LinearLayout>
</LinearLayout>